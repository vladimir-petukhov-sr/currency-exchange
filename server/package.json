{
  "name": "currency-exchange-server",
  "version": "0.0.1",
  "description": "",
  "author": "Vladimir Petukhov",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.2.1",
    "@nestjs/common": "^6.10.1",
    "@nestjs/core": "^6.10.1",
    "@nestjs/platform-express": "^6.10.1",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/terminus": "^6.5.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "class-validator-jsonschema": "^1.3.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "helmet": "^3.21.2",
    "joi": "^14.3.1",
    "moment": "^2.24.0",
    "nest-winston": "^1.2.0",
    "nestjs-config": "^1.4.4",
    "nestjs-redis": "^1.2.5",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.10.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "^24.0.23",
    "@types/joi": "^14.3.4",
    "@types/node": "^12.12.9",
    "@types/request-ip": "0.0.34",
    "@types/supertest": "^2.0.8",
    "@types/redis": "^2.8.14",
    "@types/uuid": "^3.4.6",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.5.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "typescript": "3.7.2",
    "wait-on": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
